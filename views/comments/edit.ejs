	<input type="text" name="comment[text]" class="form-control" placeholder="text" value="<%=comment.text%>" required>
	</div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
	</div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
</div>
</div>
