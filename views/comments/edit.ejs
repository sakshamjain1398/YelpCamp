<% include ../partials/header %>
<div class="container">
<h1 style="text-align:center;">Edit Comment</h1>
<div class="row">
	<div style="width:30%; margin:20px auto;">
<form method="POST" action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT">
