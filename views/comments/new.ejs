<% include ../partials/header %>
<div class="container">
<h1 style="text-align:center;">Add New Comment to <%= campground.name%></h1>
<div class="row">
	<div style="width:30%; margin:20px auto;">
<form method="POST" action="/campgrounds/<%=campground._id%>/comments">
	<div class="form-group">
	<input type="text" name="comment[text]" class="form-control" placeholder="text" required>
	</div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
	</div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
</div>
</div>
<% include ../partials/footer %>