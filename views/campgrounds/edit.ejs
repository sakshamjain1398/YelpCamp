<% include ../partials/header %>
<div class="container">
<h1 style="text-align:center;">Edit <%=campground.name%></h1>
<div class="row">
	<div style="width:30%; margin:20px auto;">
<form method="POST" action="/campgrounds/<%=campground._id %>?_method=PUT">
	<div class="form-group">
	<input type="text" class="form-control" name="campground[name]" placeholder="Name" value="<%=campground.name%>" required>
	</div>
	<div class="form-group">
	<input type="text" name="campground[image]" class="form-control" placeholder="Image URL" value="<%=campground.image%>" required>
	</div>
	<div class="form-group">
	<input type="text" name="campground[description]" class="form-control" placeholder="Description" value="<%=campground.description%>" required>
	</div>
	<div class="form-group">
	<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
	</div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
</div>
</div>
<% include ../partials/footer %>